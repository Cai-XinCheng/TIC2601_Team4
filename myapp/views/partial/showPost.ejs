<div class="card my-3 col">
  <div class="card-header d-flex p-2">
      <a href="#" class="me-auto"><%= post.header %></a>
      <div>
          <a href="#" ><%=post.username%></a>
          Last post on <%=post.created_at.getFullYear()+"-"+post.created_at.getMonth()+"-"+post.created_at.getDate()+" "+post.created_at.getHours()+":"+post.created_at.getMinutes()%>
      </div>
      
  </div>
  <div class="card-body">
      <%= post.content %>
  </div>
  <div class="card-footer">
      <a href="#" class="">
          <i class="bi bi-chat-dots" style="font-size:25px;"></i>
          99+
      </a>
  </div>
</div>