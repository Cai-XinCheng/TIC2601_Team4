<div class="pt-1">
    <div class="h5">Top Categories</div>
    <ol class="list-group list-group-numbered pt-1">
        <% topCategories.forEach(c => { %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <a href="/category/<%- c.category %> %>">
              <div class="fw-bold"><%- c.category %></div>
            </a> 
          </div>
          <a href="/<%= (req.session.isLogin) ? 'crud/category/' + c.category : 'login' %>" class="col-6 w-auto <%= (!subscribes.find(subs => subs.category === c.category)) ? 'btn btn-success' : '' %>"><%= (!subscribes.find(subs => subs.category === c.category)) ? 'S' : 'Uns' %>ubscribe</a>
        </li>
        <% }) %>
    </ol>
</div>