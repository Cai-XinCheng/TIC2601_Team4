<div class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="navbar-item">
                <a class="nav-link <%= (subscribes.current == '/') ? 'active' : ''%>" href="/">Home</a>
            </li>
            <li class="navbar-item">
                <a class="nav-link <%= (subscribes.current == '/') ? 'active' : ''%>" href="/">Hot</a>
            </li>

            <%  if (subscribes.length > 0 || subscribes.current != '/') { %>
            <li class="navbar-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Categories</a>
                <ul class="dropdown-menu">
                    <%  subscribes.forEach((subs)=> { %>
                    <li>
                        <a href="/category/<%= subs.category %>" class="list-group-item list-group-item-secondary <%= (subscribes.current == subs.category) ? 'active' : ''%>"><%= subs.category %></a>
                    </li>
                    <%  }) %>
                    <%  if (!subscribes.find(subs => subs.category === subscribes.current) && subscribes.current != '/') {%>
                        <li><hr class="dropdown-divider"></li>
                        <a href="/category/<%= subscribes.current %>" class="list-group-item list-group-item-secondary active"><%= subscribes.current %></a>
                    <%  } %>
                  </ul>
            </li>
            <%  } %>
        </ul>
        <% if (req.session.isLogin) { %>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#newPostCollapse" aria-expanded="false" aria-controls="newPostCollapse">New Post</button>
        <% } %>
    </div>
</div>