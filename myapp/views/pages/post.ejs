<!DOCTYPE html>
<%- include('../partial/head', {title:title}) %>
  <body>
    <%- include('../partial/header', {req:req}) %>
    <div class="main container-fluid mt-2">
        <div class="row">
            <%- include('../partial/leftbar') %>  
            <div class="col-8 mx-3">
              <div class="d-flex p-2 justify-content-between mb-2">
                  (Category show here)
                  <div>
                    <a href="#" ><%=post.username%></a>
                    Last post on <%=post.created_at.getFullYear()+"-"+post.created_at.getMonth()+"-"+post.created_at.getDate()+" "+post.created_at.getHours()+":"+post.created_at.getMinutes()%>
                  </div>
              </div>

              <div class="row row-cols-1 g-3">
                <!-- Post-->
                <div class="col-12 d-flex">
                  <div class="fs-4 px-2">
                      <button class="btn p-0 fs-3"><i class="bi bi-hand-thumbs-up d-block"></i></button>
                      <div class="d-block text-center"><%= post.reputation %></div>
                      <button class="btn p-0 fs-3"><i class="bi bi-hand-thumbs-down d-block"></i></button>
                  </div>
                  <div class="card col">
                      <div class="card-header d-flex">
                          <a href="/post/<%=post.post_id%>"><%= post.header %></a>
                      </div>
                      <div class="card-body">
                          <%= post.content %>
                      </div>
                  </div>
                </div>

                <!-- Textarea-->
                <div class="col-12 justify-content-right">
                  <form>
                      <div class="form-floating d-block">
                        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                        <label for="floatingTextarea2">Comments</label>
                      </div>
                      <button type="submit" class="btn btn-primary mt-3">Submit</button>
                  </form>
                </div>

                <!-- Comments-->
                <div class="col-12 mx-1">
                  (Comments)
                </div>
              </div>
              </div>
          </div>
          </div>
    </div>
    <%- include('../partial/footer') %>
  </body>
</html>
