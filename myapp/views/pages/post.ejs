<!DOCTYPE html>
<html lang="en">
<%- include('../partial/head') %>

  <body>
    <%- include('../partial/header') %>

    <div>
      <form action="/user/signout" method="get" style="float:right">
        <input type="submit" value="Sign out" />
      </form>
    </div>
    <div>
      <h1>
        <%=header%>
      </h1>
      <p>
        <%=content%>
      </p>
    </div>
    <div>
      <form method="post" action="/user/postPage/:<%=postid%>">
        <div>
          <label for="l_contents">Reply:</label><br>
          <textarea id="content" name="content" rows="10" cols="80"></textarea>
        </div>
        <div>
          <input type="submit" value="Send">
        </div>
      </form>
    </div>
    <br>
    <hr><br>
    <% if (posts.length> 0) {%>
    <% let counter=1 %>
    <% posts.forEach((p)=> { %>
      <%- include('../partial/showPost', {p:p, counter:counter, username:username}) %>
      <%counter++%>
    <% }) %>
    <% } %>
    <%- include('../partial/footer') %>
  </body>

</html>