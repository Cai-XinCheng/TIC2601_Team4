<!DOCTYPE html>
<% var dir = process.cwd() %>
<%- include('../partial/head') %>

  <body>
    <%- include('../partial/header') %>

    <div>
      <form action="/user/signout" method="get" style="float:right">
        <input type="submit" value="Sign out" />
      </form>
    </div>
    <div>
      <% var username; %>
        <% var postId; %>
          <% userInfo.forEach(function(f) { %>
            <h1>
              <%= username=f.username %> 's Main page
            </h1>
            <% }); %>
    </div>
    <div>
      <form method="post" action="/user/postPage/:<%=username%>">
        <div>
          <input type="text" name="header" placeholder="header..." size="50">
        </div>
        <div>
          <label for="l_contents">contents:</label><br>
          <textarea id="content" name="content" rows="10" cols="80"></textarea>
        </div>
        <div>
          <input type="submit" value="Post">
        </div>
      </form>
    </div>
    <br>
    <hr><br>
    <% if (posts.length> 0) {%>
      <%let counter=1%>
        <% posts.forEach((p)=> { %>
          <% postId=p.postId%>
          <%- include('../partial/showPost', {p:p, counter:counter, username:username}) %>
          <%counter++%>
          <% }) %>
          <% } %>
<%- include('../partial/footer') %>
</body>

</html>