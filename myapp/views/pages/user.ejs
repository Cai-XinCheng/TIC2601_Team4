<!DOCTYPE html>
<%- include('../partial/head') %>

  <body>
    <%- include('../partial/header', {req:req}) %>

    <div>
      <form action="/user/signout" method="get" style="float:right">
        <input type="submit" value="Sign out" />
      </form>
    </div>
    <div>
      <h1>
        <%= userInfo.username %>'s page
      </h1>

    </div>
    <div>
      <form method="post" action="/crud/post/create/0">
        <div>
          <input type="text" name="header" placeholder="header..." size="50">
        </div>
        <div>
          <label for="l_contents">contents:</label><br>
          <textarea id="content" name="content" rows="10" cols="80"></textarea>
        </div>
        <div>
          <input type="submit" value="Post">
        </div>
      </form>
    </div>
    <br>
    <hr><br>
    <%  if (posts.length> 0) {
          let counter = 1
          posts.forEach((post)=> { 
    %>    <%- include('../partial/showPost', {post:post, req:req}) %>
    <%      counter++
          })
        }
    %>
<%- include('../partial/footer') %>
</body>

</html>